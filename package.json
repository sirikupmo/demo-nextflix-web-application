{
  "name": "demo-nextflix-web-appliation",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/frontend\" \"npm run start:dev --workspace=apps/backend\"",
    "dev:frontend": "npm --workspace=apps/frontend run dev",
    "dev:backend": "npm --workspace=apps/backend run start:dev",
    "build": "npm install --workspace=apps/backend && npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --workspace=apps/frontend run build",
    "build:backend": "npm --workspace=apps/backend run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "apps/*"
  ]
}